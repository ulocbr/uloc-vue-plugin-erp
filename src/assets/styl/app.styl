::-webkit-scrollbar-thumb:active {
}

::-webkit-scrollbar-track {
  border-radius 0
  margin: 0;
}

::-webkit-scrollbar-track:hover {
}

::-webkit-scrollbar-track:active {
}

::-webkit-scrollbar-corner {
}

.u-erp-posmenu {
  display flex
  justify-content space-between
  height 40px
  min-height 40px
  background-color: #FFFFFF;
  box-shadow: 0px 1px 3px #0000000A;

  .posmenu-default {
    display flex
    justify-content space-between
    flex 1
    height 100%
    color #969696
    font-size 12px

    .left-modulos {
      flex 1
      max-width 200px
      display flex
      align-items center
      padding-left 15px
      line-height 1
      cursor pointer

      svg {
        margin-right 5px
        transition all 0.5s
        transform: rotate(180deg);
      }
    }

    .right-rest {
      flex 1
      display flex
      align-items center
      padding-right 10px
      justify-content flex-end

      .smart-search {
        width 246px
        background-color #EEF2F8
        border-radius: 14px
        height 28px
        position relative
        display flex
        justify-content space-between
        align-items center

        input {
          border none
          background none
          background-color transparent
          height 28px
          padding 0 14px
          color #969696
          font-size 12px
          flex 1
        }

        .search-icon {
          flex 0
          padding-right 12px
        }
      }

      .menu-diviser {
        height 25px
        min-height 25px
        margin-left 30px
        border-left #CFE0ED 1px solid
        padding-right 30px
      }

      .posmenu-icons{
        display flex
        align-items center
        .u-erp-posmenu-icon{
          margin-right 20px
        }
      }

      .u-erp-posmenu-icon {
        color: #7F949E
        position relative
        margin-right 10px
        cursor pointer
        transition all .2s

        i {
          color #7F949E
          height 16px
          font-size 16px
        }

        .u-erp-posmenu-icon-notify {
          transition all 0.2s
          position absolute
          top -4px
          right -10px
          width auto
          padding 0 4px
          height 12px
          font-size 10px
          font-weight bold
          display flex
          align-items center
          justify-content center
          border-radius 12px
          font-family Arial, Helvetica, sans-serif
          line-height 1

          &.notify-default {
            background-color #FA4040
            color #FFFFFF
          }
        }

        &:hover{
          i{
            color #0F4158
          }
          .u-erp-posmenu-icon-notify {
            top -8px
          }
        }
      }
    }

    &.openedMenuModule {
      .left-modulos {
        svg {
          transform: rotate(0deg);
        }
      }
    }
  }
}

.u-erp-posmenu-tooltip{
  font-size 11px
  padding 4px 6px
  background-color #222222
  font-weight 400
  font-family Arial, Helvetica, sans-serif
}

.erp-profile-menu{
  display flex
  align-items center
  .profile-icon{
    overflow hidden
    width 32px
    height 32px
    border-radius 50%
    border #D2E2EE 1px solid
    padding 2px
    cursor pointer
    img {
      border-radius 50%
    }
    &:hover{
      border #9CB1C1 1px solid
      box-shadow: 0px 1px 3px #0000000A;
    }
  }
}

