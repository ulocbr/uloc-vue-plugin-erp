// Core variables and mixins
@import 'variables.styl'

@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400&display=swap');

body, html, .font-avenir, body a {
  font-family 'Open Sans', sans-serif;
}

html, body {
  background-color #F7F8FA
}

/* ERP LAYOUT */
.u-erp-layout {
  min-height: 100vh
  position relative
  width 100%
  display flex
  flex-direction column
}

.u-erp-layout-container {
  background-color #F0EEF0
  flex 1
}

/* ERP HEADER */
$erp-header-menu-height = 22px
$erp-header-menu-module-height = 98px

.u-erp-header {
  flex 1
  max-height $erp-header-menu-height + $erp-header-menu-module-height
  transition all 0.5s
}

.u-erp-layout-menu-toggled {
  .u-erp-header {
    max-height $erp-header-menu-height !important
  }
}

.u-erp-menu {
  width 100%
  height $erp-header-menu-height
  background #C8C9D0
  border-bottom #A7A9B3 1px solid
  display flex
  position relative
  z-index 101

  .u-erp-menu-items {
    list-style none
    padding 0
    margin 0 10px
    display flex
    flex-direction row
    flex 1

    li {
      list-style none
      padding 0
      margin 3px 0 -1px 0
      flex 0
      display flex

      a {
        flex 1
        color #333333
        font-size 11px
        text-transform uppercase
        font-weight 500
        text-align center
        display flex
        align-content center
        align-items center
        justify-content center
        padding 0 15px
        white-space nowrap
        border transparent 1px solid
        border-bottom transparent 1px solid
      }

      &.selected a {
        color #000000
        background-color #FFFFFF
        border #A7A9B3 1px solid
        border-bottom #FFFFFF 1px solid
      }

      a:hover {
        color #000000
      }
    }
  }
}

.u-erp-menu-alerts {
  display flex
  align-items center
  justify-content center
  cursor pointer

  i {
    background-color #803AEC
    font-size 9px
    font-weight bold
    color #FFFFFF
    display flex
    align-items center
    justify-content center
    width 16px
    height 16px
    border-radius 16px
    font-style normal
  }

  span {
    font-size 9px
    color #666666
    text-transform uppercase
    padding 0 4px
  }
}

.u-erp-account-info {
  margin 0 38px
  display flex
  align-items center
  justify-content center
  cursor pointer

  .u-erp-account-img {
    width 16px
    height 16px
    overflow hidden
    border-radius 16px
    border #707070 1px solid
  }

  .u-erp-account-logout a {
    font-size 9px
    color #666666 !important
    text-transform uppercase
    padding 0 4px
  }
}

.u-erp-module-menu {
  height $erp-header-menu-module-height
  background: rgb(255, 255, 255);
  background: -moz-linear-gradient(180deg, rgba(255, 255, 255, 1) 0%, rgba(240, 241, 245, 1) 100%);
  background: -webkit-linear-gradient(180deg, rgba(255, 255, 255, 1) 0%, rgba(240, 241, 245, 1) 100%);
  background: linear-gradient(180deg, rgba(255, 255, 255, 1) 0%, rgba(240, 241, 245, 1) 100%);
  // filter: unquote('progid:DXImageTransform.Microsoft.gradient(startColorstr="#ffffff",endColorstr="#f0f1f5",GradientType=1);')
  border-bottom #A0A0A0 1px solid
  display flex
  flex 1
  flex-wrap nowrap
  position relative
  transition all 0.5s
  z-index 100

  &.toggled {
    transform translateY(-97px)
  }

}

.u-erp-module-toggle {
  position absolute
  display block
  right 10px
  width 16px
  height 12px
  bottom 6px
  cursor pointer
  transition all 0.5s

  &.toggled {
    bottom auto
    top 6px
    z-index 104
    transform rotate(-180deg)
  }
}

.u-erp-module-menu-component {
  display flex
  flex-direction row
  position relative

  > ul, > ul > li {
    list-style none
  }

  .lbl {
    position absolute
    bottom 0
    left 0
    width 100%
    height 20px
    font-size 11px
    color #999999
    background url("../menu-module-lbl-bg.png") top center no-repeat
    background-size contain
    display flex
    align-content center
    justify-content center
    justify-items center
    align-items center
    user-select none
  }

  &::after {
    content ''
    width 2px
    display block
    position absolute
    right -2px
    top 0
    bottom 0
    background url("../menu-module-diviser.png") center no-repeat
  }

  .u-erp-module-menu-items {
    display flex
    flex 1
    padding 0 10px
    position relative

    > li, > li > a {
      display flex
    }

    > li {
      margin-bottom 20px
    }

    > li > a {
      width 86px
      flex-direction column
      align-items center
      padding-top 12px
      font-size 11px
      color #333333
      font-weight 400
      user-select none
      position relative

      > span {
        padding-top 2px
        text-align center
      }

      .erp-module-item-tip{
        position absolute
        right -5px
        top -5px
        width 16px
        height 16px
        background-color #FF7878
        border-radius 10px
        display flex
        align-items center
        justify-content center
        font-style normal
        color #FFFFFF
        font-weight bold
        line-height 16px
        font-size 10px
      }

      &:hover {
        .erp-icon {
          transform: translateY(-4px)
        }
      }
      .erp-icon {
        transition transform 0.2s
      }

      &:active {
        -moz-box-shadow: inset 0 0 10px #f2f2f2;
        -webkit-box-shadow: inset 0 0 10px #f2f2f2;
        box-shadow: inset 0 0 10px #f2f2f2;
      }
    }
  }

  &.u-erp-menu-right {
    margin-left auto

    &::after {
      display none
    }
  }
}

/* END ERP HEADER */

