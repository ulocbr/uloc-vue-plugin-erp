.erp-box {
  border #B7B9C1 1px solid
  background-color #EBECEF
  -webkit-box-shadow: 0px 0px 3px 0px rgba(0, 0, 0, 0.16);
  -moz-box-shadow: 0px 0px 3px 0px rgba(0, 0, 0, 0.16);
  box-shadow: 0px 0px 3px 0px rgba(0, 0, 0, 0.16);
  border-radius 2px
  overflow hidden

  .erp-box-label {
    color #000000
    font-size 11px
    padding 7px 9px
    background-color #E3E4E8
    border #D5D7DB 1px solid
    border-right none
    border-left none
    user-select none
    position relative

    &:after {
      position absolute
      content ''
      left 0
      right 0
      bottom -2px
      top: -1px
      border-top #EFF0F2 1px solid
      border-bottom #EFF0F2 1px solid
    }
  }
}
