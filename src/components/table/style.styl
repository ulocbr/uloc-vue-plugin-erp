.erp-w-table {
  width 100%
  border #B5B7BF 1px solid
  border-top #B5B7BF 1px solid
  -webkit-box-shadow: 1px 2px 5px 0px rgba(0, 0, 0, 0.16);
  -moz-box-shadow: 1px 2px 5px 0px rgba(0, 0, 0, 0.16);
  box-shadow: 1px 2px 5px 0px rgba(0, 0, 0, 0.16);
  display flex
  flex-direction column
  justify-content space-between

  table {
    width 100%
    border-collapse collapse

    th {
      font-size 11px
      color #000000
      font-weight 400
      text-align left
      padding 0 6px
      height 35px
      max-height 35px
      line-height 35px
      border #CACBD3 1px solid
      background: rgb(248, 248, 249);
      background: -moz-linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);
      background: -webkit-linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);
      background: linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);
      // filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#f8f8f9",endColorstr="#f2f3f4",GradientType=1);

      &:first-child {
        text-align right
        border-left none
      }

      &:last-child {
        border-right none
      }
    }

    td {
      &:first-child {
        text-align right
      }
      font-size 11px
      color #000000
      font-weight 400
      text-align left
      padding 0 6px
      height 32px
      max-height 32px !important
      border-bottom #D9DAE0 1px solid
    }

  }

  .e-w-table-footer {
    background-color #E8E9ED
    border #CACBD3
  }
}

.e-w-table-footer-result {
  background-color #FFFFFF
  border #BDC0C7 1px solid
  height 24px
  line-height 24px
  width 160px
  align-items center
  padding 0 8px
  -webkit-box-shadow: inset 0px 0px 9px -1px rgba(229,231,234,1);
  -moz-box-shadow: inset 0px 0px 9px -1px rgba(229,231,234,1);
  box-shadow: inset 0px 0px 9px -1px rgba(229,231,234,1);
  font-size 11px
  color #000000
}
