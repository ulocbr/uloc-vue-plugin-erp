.erp-w-table {
  width 100%
  border #B5B7BF 1px solid
  border-top #B5B7BF 1px solid
  -webkit-box-shadow: 1px 2px 5px 0px rgba(0, 0, 0, 0.16);
  -moz-box-shadow: 1px 2px 5px 0px rgba(0, 0, 0, 0.16);
  box-shadow: 1px 2px 5px 0px rgba(0, 0, 0, 0.16);
  display flex
  flex-direction column
  justify-content space-between

  table {
    width 100%
    border-collapse collapse

    th {
      font-size 11px
      color #000000
      font-weight 400
      text-align left
      padding 0 6px
      height 35px
      max-height 35px
      line-height 35px
      border #CACBD3 1px solid
      background: rgb(248, 248, 249);
      background: -moz-linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);
      background: -webkit-linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);
      background: linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);
      // filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#f8f8f9",endColorstr="#f2f3f4",GradientType=1);

      &:first-child {
        text-align right
        border-left none
      }

      &:last-child {
        border-right none
      }
    }

    td {
      &:first-child {
        text-align right
      }
      font-size 11px
      color #000000
      font-weight 400
      text-align left
      padding 0 6px
      height 32px
      max-height 32px !important
      border-bottom #D9DAE0 1px solid
    }

  }

  .e-w-table-footer {
    background-color #E8E9ED
    border #CACBD3
  }

  &.erp-w-table-fixed {
    position: relative
    min-height: 100px
    display flex

    .erp-w-table-header {
      flex 0
    }

    .erp-w-table-content {
      flex 1
      display flex
      justify-content space-between
      position relative

      .erp-w-table-ctable {
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        overflow-y: scroll

        td {
        }
      }
    }

    /*tbody {
      position absolute
      left 0
      top 0
      right 0
      bottom 0
      overflow auto
    }*/
  }
}

.e-w-table-footer-result {
  background-color #FFFFFF
  border #BDC0C7 1px solid
  height 24px
  line-height 24px
  width 160px
  align-items center
  padding 0 8px
  -webkit-box-shadow: inset 0px 0px 9px -1px rgba(229, 231, 234, 1);
  -moz-box-shadow: inset 0px 0px 9px -1px rgba(229, 231, 234, 1);
  box-shadow: inset 0px 0px 9px -1px rgba(229, 231, 234, 1);
  font-size 11px
  color #000000
}

.erp-table {
  box-shadow none
  border-radius 0
  background-color #FFFFFF
  padding-top 10px

  th, td {
    padding 4px 8px // !important
    // font-size 10px // !important

    &:last-child {
      max-width 40px // !important
      padding 2px // !important
    }
  }

  thead tr, tbody tr, tbody td {
    height auto // !important
    font-size 10px
  }

  thead tr th, thead tr td {
    border-left #D4D7DC 1px solid
    font-size 10px
    text-transform uppercase
    color #333333
    font-weight bold

    &:first-child {
      border-left none
    }
  }

  .u-checkbox-icon {
    font-size 15px
    width 15px
    height 15px
  }

  .u-checkbox {
    .text-faded {
      color #D4D7DC !important
    }
  }

  .u-table-sort-icon {
    font-size 100% !important
  }

  .u-table-progress {
    padding none !important

    td, th {
      padding 2px 0 !important

      &:last-child {
        padding 2px 0 !important
      }
    }
  }
}

.erp-w-table-pagination {
  display flex
  align-items center
  flex-direction row

  .e-p-input {
    display flex
    align-items center
    flex-direction row
    margin-left: 10px

    input {
      max-width 25px
    }

    .u-btn{
      padding 4px 6px
    }
  }
}
