div.u-input-target
  min-width 35px

.erp-if-dark
  &:hover:before
    color white

  &:not(.erp-if-inverted-light)
    .u-input-target
      color white

.erp-if-inverted-light
  .erp-if-label, .erp-if-addon, .erp-if-control
    color #656565

.erp-if-focused
  border-top-color #8b8e98
  border-left-color #a6a8af
  border-right-color #a6a8af
  border-bottom-color #b9bac0

  &::after {
    pointer-events none
    content ''
    position absolute
    left 0
    top 0
    bottom 0
    width 100%
    border #edeeef 1px solid
    border-right #e3e4e5 3px solid
  }

  .erp-if-label, .erp-if-addon, .erp-if-control
    color currentColor !important

.erp-if-error {
  border-color brown
}

.erp-if-warning {
  border-color #AE8B00
}

.erp-if-disabled
  cursor not-allowed !important
  background-color #F3F3F3
  border #E8E3E3 1px solid

  .erp-if-label, .erp-if-control, .u-input-target, .u-chip
    opacity .6
    cursor not-allowed !important


.erp-if-size-2 {
  height 26px

  input {
    font-size 12px
    height 26px
    line-height 26px
    padding 2px 8px 0
  }
}

.erp-s-field {
  display flex

  .erp-s-field-label {
    font-size 11px
    color #333333
    user-select none

    &.no-label {
      display none !important
    }

    &.label-wrap {
      white-space normal !important
    }
  }

  .erp-s-field-content {
    position relative
  }

  .erp-s-field-helper {
    font-size 10px
    color #999999
    position absolute

    &.pos-left-top {
      left 0
      top -14px
    }

    &.pos-left-bottom {
      left 0
      bottom -14px
    }

    &.pos-right-top {
      right 0
      top -14px
    }

    &.pos-right-bottom {
      right 0
      bottom -14px
    }
  }

  &.erp-field-layout-top {
    flex-direction column

    .erp-s-field-label {
      padding-bottom 7px
    }
  }

  &.erp-field-align-left {
    .erp-s-field-label {
      text-align left
    }
  }

  &.erp-field-align-right {
    .erp-s-field-label {
      text-align right
      justify-content flex-end
    }
  }

  &.erp-field-layout-left {
    flex-direction row
    justify-content space-between

    .erp-s-field-label {
      // flex 1
      white-space nowrap
      margin-right 12px
      display flex
      align-self center

      &.label-wrap {
        white-space normal !important
      }
    }

    .erp-s-field-content {
      flex 1
    }
  }
}

.erp-select {
  position relative

  .erp-if-select {
    pointer-events none
    position absolute
    left 0
    bottom 0
    top 0
    width 100%
    display flex

    &:after {
      display flex
      align-self center
      position absolute
      content ''
      right 5px
      width: 0;
      height: 0;
      border-left: 3px solid transparent;
      border-right: 3px solid transparent;
      border-top: 4px solid #707070;
      margin-top 1px
    }
  }

  &.erp-if-size-2 {
    .erp-if-select {

      &:after {
        margin-top 2px
      }
    }
  }

  .erp-select-input {
    -webkit-appearance none
    -moz-appearance none
    background none
    border-radius 0
    border none
    margin-right 14px
    user-select none
  }

  &.erp-if-focused {
    .erp-select-input {
    }

    .erp-select-line-helper {
      border #333333 1px dotted
      margin-right 14px
      pointer-events none
      position absolute
      left 2px
      top 4px
      bottom 2px
      right 0
    }
  }
}

.erp-simple-select {
  -webkit-appearance none
  -moz-appearance none
  background none
  border-radius 0
  border none
  font-size 11px
  height 20px
  line-height 20px
}

.erp-select-advanced {
}

.erp-select-popup {
  resize both
  border #A0A2AC 1px solid
  box-shadow none
  // min-height 100px !important
  overflow auto
  // height 100px

  &.erp-select-multiple, &.erp-select-l-h {
    min-height 100px !important
    height 100px
  }

  .erp-select-container {
    position relative
  }

  .erp-select-desc {
    position sticky
    top 0
    left 0
    width 100%
    display block
    height auto
    background-color #F5F5F6
    border-bottom #CFD0D7 1px solid
    padding 4px 4px
    font-size 11px
    color #333333
  }
}

.erp-select-list {
  padding 0
  margin 0
  list-style none

  .erp-select-list-item {
    user-select none

    td {
      border-top: #FFFFFF 1px solid
      border-bottom: #FFFFFF 1px solid
      border-right #CCCCCC 1px solid
      font-size 11px
      color #333333
      padding 4px
      padding-left 8px
      align-content center

      &:first-child {
        padding-left 4px
      }

      &:last-child {
        border-right none
      }

      .u-option {
        margin-right 4px
      }
    }

    &:hover, &.select-highlight {
      td {
        border-top #DADADA 1px solid
        border-bottom #DADADA 1px solid
        background-color #F0F1F3
      }
    }

    &.item-selected {
      td {
        font-weight bold
      }
    }

    .u-checkbox-icon {
      font-size: 15px;
      width: 15px;
      height: 15px;
    }

    .u-checkbox .text-faded {
      color: #d4d7dc !important;
    }
  }
}

.erp-select-table {
  position relative

  table {
    width 100%
    border-collapse collapse
  }

  .table-helper-header {
    position sticky
    top 0
    left 0
    width 100%
    display block
    height auto
    z-index 11
    border-collapse collapse

    .thead-helper-header {
      border-collapse collapse

      th {
        width auto

        &:first-child {
          border-left none
        }

        &:last-child {
          border-right none
        }
      }
    }
  }

  thead:not(.thead-helper-header) {
    position absolute
    top 0
    left 0
    width 100%
    display block
    height auto
    z-index 10
  }

  th {
    font-size 11px
    color #000000
    font-weight 400
    text-align left
    padding 0 8px
    height 20px
    max-height 20px
    line-height 20px
    border #CACBD3 1px solid
    background: rgb(248, 248, 249);
    background: -moz-linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);
    background: -webkit-linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);
    background: linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);

    &:first-child {
      padding-left 4px
    }
  }
}

.erp-label {
  border: #707070 1px solid
  padding 16px 20px
  width 100%
  display block
  position relative
  -webkit-box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.16);
  -moz-box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.16);
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.16);
  z-index 1
  font-size 11px

  &::after {
    content ''
    position absolute
    left 0
    top 0
    bottom 0
    width 100%
    border #ECECEC 1px solid
    pointer-events none
  }

  .label-title {
    display flex
    position absolute
    height 20px
    background-color #F5F5F5 // need change by user class depending the bg inherit
    font-size 11px
    padding 0 4px
    align-items center
    line-height 20px
    user-select none
    font-weight 600
    text-shadow 1px 1px #FFFFFF
    z-index 2
    color #333333
  }

  &.erp-label-layout-top {
    .label-title {
      top -11px
    }
  }

  &.erp-label-layout-bottom {
    -webkit-box-shadow: 0px -2px 2px 0px rgba(0, 0, 0, 0.16);
    -moz-box-shadow: 0px -2px 2px 0px rgba(0, 0, 0, 0.16);
    box-shadow: 0px -2px 2px 0px rgba(0, 0, 0, 0.16);

    .label-title {
      bottom -11px
    }
  }

  &.erp-label-align-left {
    .label-title {
      left 26px
    }
  }

  &.erp-label-align-right {
    .label-title {
      right 26px
    }
  }
}

// Checkbox
.erp-checkbox {
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  display: inline-flex;
  cursor pointer

  .erp-checkbox-container{
    display: inline-flex;
    position: relative;
  }


  input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
    height: 0;
    width: 0;
  }

  .erp-checkbox-fake {
    position: relative;
    display inline-block
    height: 13px;
    width: 13px;
    background-color: #EBECF0;
    border #9DA0AA 1px solid
    padding 1px

    &:after {
      content ''
      display block
      background-color #FFFFFF
      border #CACCD4 1px solid
      width 9px
      height 9px
    }
  }

  .erp-checkbox-mark {
    left: 6px;
    top: -3px;
    width: 6px;
    height: 12px;
    border: solid #201F35;
    border-width: 0 2px 3px 0;
    -webkit-transform: rotate(38deg);
    -ms-transform: rotate(38deg);
    transform: rotate(38deg);
    display none
    position absolute
  }

  input:checked ~ .erp-checkbox-mark {
    display block
  }

  &:hover input ~ .erp-checkbox-fake, &:focus input ~ .erp-checkbox-fake {
    background-color: #CCCCCC;
    border #81848e 1px solid
  }
}
