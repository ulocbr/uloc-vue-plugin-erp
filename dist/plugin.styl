  flex 1
  flex-wrap nowrap
  position relative
  transition all 0.5s
  z-index 100
  &.toggled {
    transform translateY(-97px)
  }
}
.u-erp-module-toggle {
  position absolute
  display block
  right 10px
  width 16px
  height 12px
  bottom 6px
  cursor pointer
  transition all 0.5s
  &.toggled {
    bottom auto
    top 6px
    z-index 104
    transform rotate(-180deg)
  }
}
.u-erp-module-menu-component {
  display flex
  flex-direction row
  position relative
  > ul, > ul > li {
    list-style none
  }
  .lbl {
    position absolute
    bottom 0
    left 0
    width 100%
    height 20px
    font-size 11px
    color #999999
    background url("./assets/menu-module-lbl-bg.png") top center no-repeat
    background-size contain
    display flex
    align-content center
    justify-content center
    justify-items center
    align-items center
    user-select none
  }
  &::after {
    content ''
    width 2px
    display block
    position absolute
    right -2px
    top 0
    bottom 0
    background url("./assets/menu-module-diviser.png") center no-repeat
  }
  .u-erp-module-menu-items {
    display flex
    flex 1
    padding 0 10px
    position relative
    > li, > li > a {
      display flex
    }
    > li {
      margin-bottom 20px
    }
    > li > a {
      width 86px
      flex-direction column
      align-items center
      padding-top 12px
      font-size 11px
      color #333333
      font-weight 400
      user-select none
      position relative
      > span {
        padding-top 2px
        text-align center
      }
      .erp-module-item-tip{
        position absolute
        right -5px
        top -5px
        width 16px
        height 16px
        background-color #FF7878
        border-radius 10px
        display flex
        align-items center
        justify-content center
        font-style normal
        color #FFFFFF
        font-weight bold
        line-height 16px
        font-size 10px
      }
      &:hover {
        .erp-icon {
          transform: translateY(-4px)
        }
      }
      .erp-icon {
        transition transform 0.2s
      }
      &:active {
        -moz-box-shadow: inset 0 0 10px #f2f2f2;
        -webkit-box-shadow: inset 0 0 10px #f2f2f2;
        box-shadow: inset 0 0 10px #f2f2f2;
      }
    }
  }
  &.u-erp-menu-right {
    margin-left auto
    &::after {
      display none;
    }
  }
