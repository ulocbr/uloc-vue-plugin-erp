$plugin = 'uloc-vue-plugin-erp'
.erp-btn {
  background: rgb(242, 243, 245);
  background: -moz-linear-gradient(180deg, rgba(242, 243, 245, 1) 0%, rgba(222, 224, 230, 1) 50%, rgba(236, 238, 242, 1) 100%);
  background: -webkit-linear-gradient(180deg, rgba(242, 243, 245, 1) 0%, rgba(222, 224, 230, 1) 50%, rgba(236, 238, 242, 1) 100%);
  background: linear-gradient(180deg, rgba(242, 243, 245, 1) 0%, rgba(222, 224, 230, 1) 50%, rgba(236, 238, 242, 1) 100%);
  
  border #A9ACB5 1px solid
  border-radius 2px
  position relative
  &::after {
    content ''
    position absolute
    left 0
    top 0
    bottom 0
    width 100%
    border-radius 2px
    border #FAFBFC 1px solid
  }
  &.erp-btn-size-md {
    font-size 11px !important
  }
}
.erp-btn-circle-status {
  width 15px
  height 15px
  border-radius 50%
  display inline-block
  background-color #f2f2f2
  &.sm {
    width 11px
    height 11px
  }
}
.erp-btn-table-options {
  color #707070
  font-size 14px
  font-weight bold
  padding 0 4px
  &:hover {
    color #000000
  }
}
.erp-w-table {
  width 100%
  border #B5B7BF 1px solid
  border-top #B5B7BF 1px solid
  -webkit-box-shadow: 1px 2px 5px 0px rgba(0, 0, 0, 0.16);
  -moz-box-shadow: 1px 2px 5px 0px rgba(0, 0, 0, 0.16);
  box-shadow: 1px 2px 5px 0px rgba(0, 0, 0, 0.16);
  display flex
  flex-direction column
  justify-content space-between
  table {
    width 100%
    border-collapse collapse
    th {
      font-size 11px
      color #000000
      font-weight 400
      text-align left
      padding 0 6px
      height 35px
      max-height 35px
      line-height 35px
      border #CACBD3 1px solid
      background: rgb(248, 248, 249);
      background: -moz-linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);
      background: -webkit-linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);
      background: linear-gradient(180deg, rgba(248, 248, 249, 1) 0%, rgba(242, 243, 244, 1) 100%);
      
      &:first-child {
        text-align right
        border-left none
      }
      &:last-child {
        border-right none
      }
    }
    td {
      &:first-child {
        text-align right
      }
      font-size 11px
      color #000000
      font-weight 400
      text-align left
      padding 0 6px
      height 32px
      max-height 32px !important
      border-bottom #D9DAE0 1px solid
    }
  }
  .e-w-table-footer {
    background-color #E8E9ED
    border #CACBD3
  }
}
.e-w-table-footer-result {
  background-color #FFFFFF
  border #BDC0C7 1px solid
  height 24px
  line-height 24px
  width 160px
  align-items center
  padding 0 8px
  -webkit-box-shadow: inset 0px 0px 9px -1px rgba(229, 231, 234, 1);
  -moz-box-shadow: inset 0px 0px 9px -1px rgba(229, 231, 234, 1);
  box-shadow: inset 0px 0px 9px -1px rgba(229, 231, 234, 1);
  font-size 11px
  color #000000
}
.erp-table {
  box-shadow none
  border-radius 0
  background-color #FFFFFF
  padding-top 10px
  th, td {
    padding 4px 8px 
    
    &:last-child {
      max-width 40px 
      padding 2px 
    }
  }
  thead tr, tbody tr, tbody td {
    height auto 
    font-size 10px
  }
  thead tr th, thead tr td {
    border-left #D4D7DC 1px solid
    font-size 10px
    text-transform uppercase
    color #333333
    font-weight bold
    &:first-child {
      border-left none
    }
  }
  .u-checkbox-icon {
    font-size 15px
    width 15px
    height 15px
  }
  .u-checkbox{
    .text-faded {
      color #D4D7DC !important
    }
  }
  .u-table-sort-icon {
    font-size 100% !important
  }
  .u-table-progress{
    padding none !important
    td, th{
      padding 2px 0 !important
      &:last-child{
        padding 2px 0 !important
      }
    }
  }
}
.erp-tabs {
  display flex
  flex-direction row
  padding-left 28px
  margin-bottom -1px
  align-items flex-end
  z-index 1
  position relative
  .erp-tabs-item {
    user-select none
    position relative
    z-index 2
    background: rgb(220, 221, 225);
    background: -moz-linear-gradient(180deg, rgba(220, 221, 225, 1) 0%, rgba(235, 236, 239, 1) 100%);
    background: -webkit-linear-gradient(180deg, rgba(220, 221, 225, 1) 0%, rgba(235, 236, 239, 1) 100%);
    background: linear-gradient(180deg, rgba(220, 221, 225, 1) 0%, rgba(235, 236, 239, 1) 100%);
    height 21px;
    min-width 100px
    border #9DA0AA 1px solid
    padding 4px 6px
    font-size 11px
    color #333333
    font-weight normal
    &::after {
      content ''
      position absolute
      left 0
      top 0
      bottom 0
      width 100%
      border-radius 2px
      border #EDEDF0 1px solid
    }
    &:not(.disabled):not(.u-btn-flat):not(.u-btn-outline):not(.u-btn-push) {
      &:before {
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        border-radius inherit
        z-index -1
        transition .3s cubic-bezier(.25, .8, .5, 1)
      }
      &:active {
        outline 0
        background-image none
        box-shadow inset 0 5px 10px rgba(0, 0, 0, .190)
      }
    }
    &:hover {
      color inherit
    }
    &.active {
      height 24px
      background #FFFFFF !important
      border-bottom #FFFFFF 1px solid
      &::after {
        border-bottom #FFFFFF 1px solid
      }
    }
  }
}
.erp-window {
  .u-window {
    background-color #D0D1D7 !important
    border #9DA0AA 1px solid
    .u-window-header-title {
      color #000000
      font-size 12px
      font-weight bold
      text-shadow: 1px 1px 2px rgba(255, 255, 255, 1);
    }
    .u-window-content {
      background-color #F5F5F5 !important
      border #A8AAB4 1px solid
      margin 0 5px 5px 5px
    }
  }
}
.erp-w-content {
  display flex
  flex-direction column
  justify-content space-between
  flex 1
  height 100%
  max-height 100%
  padding 5px 12px
  .erp-w-content-header {
    background-color #EBECEF
    border #C2C4CB 1px solid
    min-height: 80px;
  }
  .erp-w-content-body {
    background-color #FFFFFF
    border #9DA0AA 1px solid
    flex 1
    -webkit-box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.16);
    -moz-box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.16);
    box-shadow: 2px 2px 3px 0px rgba(0, 0, 0, 0.16);
    overflow auto
    &.with-tabs {
      
    }
  }
  .erp-tabs {
    margin-top 13px
  }
  .window-actions {
    text-align right
    padding-top 8px
    color #000000
    .u-btn-inner {
      div {
        font-weight bold !important
      }
    }
    i {
      font-size 24px
      color #0078D7
    }
  }
}
