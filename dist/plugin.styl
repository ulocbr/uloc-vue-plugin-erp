  }
}
.u-erp-menu {
  width 100%
  height $erp-header-menu-height
  background #C8C9D0
  border-bottom #A7A9B3 1px solid
  display flex
  position relative
  z-index 101
  .u-erp-menu-items {
    user-select none
    list-style none
    padding 0
    margin 0 10px
    display flex
    flex-direction row
    flex 1
    li {
      list-style none
      padding 0
      margin 3px 0 -1px 0
      flex 0
      display flex
      a {
        flex 1
        color #333333
        font-size 11px
        text-transform uppercase
        font-weight 500
        text-align center
        display flex
        align-content center
        align-items center
        justify-content center
        padding 0 15px
        white-space nowrap
        border transparent 1px solid
        border-bottom transparent 1px solid
      }
      &.selected a {
        color #000000
        background-color #FFFFFF
        border #A7A9B3 1px solid
        border-bottom #FFFFFF 1px solid
      }
      a:hover {
        color #000000
      }
    }
  }
}
.u-erp-menu-alerts {
